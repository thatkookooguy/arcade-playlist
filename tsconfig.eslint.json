{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
    },
    "incremental": false,
    "skipLibCheck": true
  },
  "exclude": [ "node_modules", "dist", "lib" ]
}